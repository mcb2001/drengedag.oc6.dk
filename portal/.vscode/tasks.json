{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "yarn build",
            "type": "shell",
            "windows": {
                "command": "yarn"
            },
            "args": [
                "run",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "yarn start",
            "type": "shell",
            "windows": {
                "command": "yarn"
            },
            "args": [
                "run",
                "start"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}